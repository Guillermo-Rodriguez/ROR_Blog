 <!-- Load an icon library to show a hamburger menu (bars) on small screens -->

 <style type="text/css">
   /* Style the navigation menu */
   .topnav {
    overflow: hidden;
    background-color: #333;
    position: relative;
  }

  .topnav #myLinks {
    display: none;
  }

  .topnav a {
    color: white;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 15px;
    display: block;
  }

  .topnav a.icon {
    background: black;
    position: absolute;
    left: 1300px;
    right: 0;
    top: 0;
    bottom: 0;
  }

  .topnav a:hover {
    background-color: #333;
    color: black;
  }

  .active {
    background-color: #4CAF50;
    color: white;
  } 
</style>
<div class="topnav">
  <div id="myLinks">
    <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %></strong>.
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
    <%= link_to "Registrar Usuario", newUser_path, :class => 'navbar-link'  %> |
    <%= link_to "Usuarios", indexUsers_path, :class => 'navbar-link'  %> |
    <%= link_to "Admin Blogs", indexBlogs_path, :class => 'navbar-link'  %> |
    <%= link_to "Categorias", indexCategoria_path, :class => 'navbar-link'  %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> 
    <% else %>
    <%= link_to "Ver Blogs", public_path, :class => 'navbar-link'  %> |
    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> |
    <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>

    <% end %>
  </div>
  <div align="right">
    <a href="javascript:void(0);" onclick="myFunction()"><button class="btn btn-outline-light btn-sm">ClickMe</button></a>
  </div>
</div>

<script type="text/javascript">
  function myFunction() {
    var x = document.getElementById("myLinks");
    if (x.style.display === "block") {
      x.style.display = "none";
    } else {
      x.style.display = "block";
    }
  } 
</script>