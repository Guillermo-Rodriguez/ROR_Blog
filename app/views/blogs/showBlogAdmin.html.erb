<style type="text/css">
	a{
		color: #ffff;
		text-decoration: none;
	}
	a:hover{
		color: #ffff;
		text-decoration: none;
	}
	
</style>
<div class="container mt-5">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body">
					<div class="card">
						<div class="card-body">
							<div class="container">
								<div class="row">
									<div class="col-md-6">
									<%= image_tag @blog.picture.thumb.url, :class=>'figure-img img-fluid rounded' %>
										
									</div>
									<div class="col-md-6">
										Titulo: <%= @blog.titulo %><br>	
										Categoria: <%= @blog.categoria_id %><br>	
										Usuario: <%= @blog.user_id %><br>	
									</div>
									<div class="col-md-12">
										Contenido: <%= @blog.contenido %><br>										
									</div>
									<div class="col-md-12 text-right">
										<button class="btn btn-secondary btn-sm"><%= link_to "Back", indexBlogs_path %></button>
									</div>
								</div>
							</div>
						</div>
					</div>

					<% @comentarios.each do |coment| %>
					<div class="card mt-2">
						<div class="card-body">
							<div class="container">
								<div class="row">
									<div class="col-md-4">
										<span class="badge badge-success"><%= coment.nombre%></span>
									</div>
									<div class="col-md-4">
										<span class="badge badge-info"><%= coment.email%></span>
									</div>
									<div class="col-md-4">
										<span class="badge badge-danger"><%= link_to "Eliminar Comentario", deleteComentario_path(coment.id_comentario), :class=>"link", method: :delete, data: { confirm: "¿Estás seguro de eliminar este Comentario?" } %></span>
									</div>
									</div>
									<div class="row">
									<div class="col-md-12">
										<%= coment.comentario%>
									</div>
								</div>
							</div>
						</div>
					</div>
					<%end%>


				</div>
			</div>
		</div>
	</div>

</div>
