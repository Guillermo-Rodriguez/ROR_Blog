<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <div class="container">
            <h2 align="center">New Category</h2>
            <%= form_for @categoria, url: createCategoria_path do |f| %>
            <div class="row">
              <div class="col-md-12">
                <%= f.label :nombre_categoria %>
                <%= f.text_field :nombre_categoria, :class =>"form-control", :required =>"on" %>
              </div>
              <div class="col-md-12">
                <%= f.submit "Add Category", :class => "btn btn-block btn-info mt-4" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>